{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "outDir": "dist/types",
    "declaration": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ]
  },
  "vueCompilerOptions": {
    "jsxTemplates": true
  },
  "include": [
    "src/env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.vue",
    "src/**/*.json",
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
