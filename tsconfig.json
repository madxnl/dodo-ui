{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist/types",
    "declaration": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "vueCompilerOptions": {
    "strictTemplates": true,
    "dataAttributes": [
      "data-selectactive",
      "data-mobile-nav",
      "clip-path",
      "stop-color",
      "fill-rule",
      "stroke-width",
      "color-interpolation-filters",
      "id",
      "tabindex"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.test.ts", "src/**/*.vue", "src/**/*.json"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
