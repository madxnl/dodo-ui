{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist/types",
    "declaration": true
  },
  "vueCompilerOptions": {
    "jsxTemplates": true
  },
  "include": [
    "src/env.d.ts",
    "src/index.ts",
    "src/components/**/*.vue",
  ],
  "exclude": [
    "src/main.ts",
    "src/docs/index.ts",
    "src/docs/**/*.*",
  ],
}
